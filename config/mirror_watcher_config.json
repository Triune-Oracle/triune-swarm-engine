{
  "system": {
    "name": "MirrorWatcherAI Complete Automation System",
    "version": "1.0.0",
    "description": "Complete cloud-based execution with zero manual intervention",
    "first_run_target": "2025-08-19T06:00:00Z"
  },
  "analyzer": {
    "timeout": 300,
    "concurrent_repos": 3,
    "output_format": "json",
    "default_analysis_mode": "standard",
    "enable_deep_scan": false,
    "retry_attempts": 3,
    "retry_delay": 30
  },
  "shadowscrolls": {
    "timeout": 30,
    "enable_external_attestation": true,
    "retry_attempts": 3,
    "local_storage_enabled": true,
    "verification_enabled": true
  },
  "lineage": {
    "crypto_enabled": true,
    "signature_algorithm": "ed25519",
    "storage_path": ".shadowscrolls/lineage",
    "enable_merkle_trees": true,
    "chain_verification": true,
    "session_timeout": 3600
  },
  "triune": {
    "sync_interval": 300,
    "enable_legio_cognito_sync": true,
    "enable_triumvirate_monitor_sync": true,
    "enable_swarm_engine_sync": true,
    "health_check_interval": 60,
    "retry_attempts": 3
  },
  "github": {
    "repositories": [
      "Triune-Oracle/triune-swarm-engine",
      "Triune-Oracle/legio-cognito",
      "Triune-Oracle/triumvirate-monitor"
    ],
    "api_timeout": 30,
    "clone_depth": 1,
    "concurrent_repos": 3
  },
  "automation": {
    "daily_execution_time": "06:00",
    "timezone": "UTC",
    "enable_error_recovery": true,
    "notification_enabled": true,
    "artifact_retention_days": 90,
    "execution_timeout_minutes": 45
  },
  "security": {
    "enable_secret_scanning": true,
    "enable_dependency_audit": true,
    "encrypt_local_storage": true,
    "require_attestation": true,
    "audit_trail_enabled": true
  },
  "performance": {
    "enable_caching": true,
    "cache_ttl_seconds": 3600,
    "enable_compression": true,
    "max_memory_usage_mb": 2048,
    "enable_metrics_collection": true
  },
  "logging": {
    "level": "INFO",
    "enable_structured_logging": true,
    "enable_json_output": true,
    "log_rotation_enabled": true,
    "max_log_size_mb": 100
  }
}