{
  "version": "1.0.0",
  "system_name": "MirrorWatcherAI",
  "deployment_target": "production",
  "execution_schedule": {
    "daily_run_time": "06:00",
    "timezone": "UTC",
    "enabled": true,
    "backup_schedule": {
      "enabled": true,
      "times": ["12:00", "18:00"],
      "timezone": "UTC"
    }
  },
  "analysis_configuration": {
    "default_repositories": [
      "triune-swarm-engine",
      "legio-cognito",
      "triumvirate-monitor",
      "shadowscrolls-api",
      "triune-oracle-core"
    ],
    "analysis_depth": "comprehensive",
    "security_scanning": {
      "enabled": true,
      "severity_threshold": "medium",
      "include_dependencies": true,
      "check_secrets": true
    },
    "performance_metrics": {
      "enabled": true,
      "collect_timing_data": true,
      "repository_size_analysis": true,
      "commit_frequency_analysis": true
    },
    "health_scoring": {
      "enabled": true,
      "weight_factors": {
        "security": 0.3,
        "activity": 0.25,
        "code_quality": 0.25,
        "documentation": 0.1,
        "community": 0.1
      },
      "minimum_threshold": 70
    }
  },
  "shadowscrolls_configuration": {
    "enabled": true,
    "auto_attestation": true,
    "local_fallback": true,
    "verification_level": "cryptographic",
    "retention_policy": {
      "local_retention_days": 365,
      "external_retention": "permanent"
    },
    "signature_algorithm": "HMAC-SHA256"
  },
  "lineage_configuration": {
    "enabled": true,
    "database_path": ".shadowscrolls/lineage/mirror_lineage.db",
    "backup_enabled": true,
    "integrity_checks": true,
    "verification_chain": {
      "enabled": true,
      "chain_validation": true,
      "merkle_tree_verification": true
    },
    "retention_policy": {
      "session_retention_days": 90,
      "event_retention_days": 30,
      "error_retention_days": 180
    }
  },
  "triune_integration": {
    "enabled": true,
    "systems": {
      "legio_cognito": {
        "enabled": true,
        "auto_archive": true,
        "archive_format": "json",
        "compression": true
      },
      "triumvirate_monitor": {
        "enabled": true,
        "real_time_updates": true,
        "mobile_alerts": true,
        "dashboard_sync": true
      },
      "swarm_engine": {
        "enabled": true,
        "native_integration": true,
        "compatibility_mode": "python_76_3",
        "shared_memory": true
      },
      "shell_automation": {
        "enabled": true,
        "infrastructure_utilization": "10_1_percent",
        "script_execution": true,
        "environment_updates": true
      }
    },
    "sync_configuration": {
      "parallel_execution": true,
      "timeout_seconds": 300,
      "retry_attempts": 3,
      "fallback_enabled": true
    }
  },
  "error_handling": {
    "enabled": true,
    "retry_policy": {
      "max_attempts": 3,
      "exponential_backoff": true,
      "base_delay_seconds": 5
    },
    "notification_policy": {
      "critical_errors": true,
      "warning_threshold": 3,
      "notification_channels": ["github_issues", "logs"]
    },
    "recovery_mechanisms": {
      "auto_recovery": true,
      "local_fallback": true,
      "degraded_mode": true
    }
  },
  "performance_optimization": {
    "parallel_analysis": true,
    "max_concurrent_repositories": 5,
    "request_throttling": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_limit": 10
    },
    "caching": {
      "enabled": true,
      "cache_duration_minutes": 30,
      "cache_directory": ".cache/mirror_watcher"
    },
    "memory_management": {
      "max_memory_mb": 1024,
      "garbage_collection": true,
      "streaming_enabled": true
    }
  },
  "security_configuration": {
    "api_key_rotation": {
      "enabled": false,
      "rotation_days": 90,
      "automated": false
    },
    "data_encryption": {
      "at_rest": true,
      "in_transit": true,
      "key_management": "environment"
    },
    "access_control": {
      "github_token_scopes": ["repo", "workflow", "read:org"],
      "minimum_permissions": true,
      "audit_logging": true
    }
  },
  "artifact_management": {
    "enabled": true,
    "retention_days": 90,
    "compression_level": 6,
    "artifact_types": [
      "analysis_results",
      "attestation_scrolls",
      "lineage_logs",
      "error_reports",
      "performance_metrics"
    ],
    "storage_locations": {
      "github_artifacts": true,
      "local_backup": true,
      "external_storage": false
    }
  },
  "monitoring_configuration": {
    "health_checks": {
      "enabled": true,
      "interval_minutes": 5,
      "comprehensive_check": true
    },
    "metrics_collection": {
      "enabled": true,
      "detailed_timing": true,
      "resource_usage": true,
      "error_tracking": true
    },
    "alerting": {
      "enabled": true,
      "thresholds": {
        "health_score_minimum": 70,
        "execution_time_maximum_minutes": 25,
        "error_rate_maximum_percent": 5
      }
    }
  },
  "feature_flags": {
    "experimental_features": false,
    "beta_integrations": false,
    "enhanced_security_scanning": true,
    "advanced_analytics": true,
    "real_time_monitoring": true
  },
  "environment_specific": {
    "github_actions": {
      "timeout_minutes": 30,
      "runner_requirements": "ubuntu-latest",
      "python_version": "3.11",
      "additional_packages": ["aiohttp", "aiosqlite", "GitPython"]
    },
    "local_development": {
      "debug_mode": true,
      "verbose_logging": true,
      "test_mode": false
    }
  }
}